<li id="micropost-<%= micropost.id %>" style="margin-bottom: 0px " >
	<%= link_to gravatar_for(micropost.user), micropost.user %>

	<span class="user" >
		<%= link_to micropost.user.name, micropost.user %>
		| <strong><%= micropost.title %></strong>
	</span>
	<br>
	<span class="content">
		<%= micropost.content %>
		<%= image_tag micropost.picture.url if micropost.picture? %>
	</span>
	<span class="timestamp">
	Posted <%= time_ago_in_words(micropost.created_at) %> ago.
	</span>
	<% if logged_in? %>	
		<% if current_user?(micropost.user) %>
			<%= button_to "Delete", micropost, method: :delete, class: "btn btn-danger btn-sm pull-right btn-delete-micropost", 
	data: { confirm: "You want to delete this post?" } %>
		<% end %>
	
	<% end %>
	
</li>
<div class="clearfix"></div>